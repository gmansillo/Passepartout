<?xml version="1.0" encoding="UTF-8"?>
<form>
    <namespace path="src">GiovanniMansillo\Component\Dory</namespace>

    <fieldset name="title_alias">
        <field
            name="title"
            type="text"
            label="JGLOBAL_TITLE"
            required="true"
        />

        <field
            name="alias"
            type="text"
            label="JFIELD_ALIAS_LABEL"
            description="JFIELD_ALIAS_DESC"
            hint="JFIELD_ALIAS_PLACEHOLDER"
        />
    </fieldset>

    <field
        name="description"
        type="editor"
        label="JGLOBAL_DESCRIPTION"
        required="false"
    />

    <field
        name="state"
        type="list"
        label="JSTATUS"
        default="1"
        required="required"
        class="form-select-color-state"
        validate="options"
    >
        <option value="1">JPUBLISHED</option>
        <option value="0">JUNPUBLISHED</option>
        <option value="2">JARCHIVED</option>
        <option value="-2">JTRASHED</option>
    </field>

    <field
        addfieldprefix="GiovanniMansillo\Component\Dory\Administrator\Field"
        name="file"
        type="uploadedfile"
        readonly="true"
        showon="id!:"
        label="COM_DORY_DOCUMENT_FILE_NAME"
    />

    <field
        addfieldprefix="GiovanniMansillo\Component\Dory\Administrator\Field"
        addruleprefix="GiovanniMansillo\Component\Dory\Administrator\Rule"
        name="file_upload"
        type="enhancedfile"
        label="COM_DORY_DOCUMENT_FILE_UPLOAD"
        validate="extensionblacklist"
        required="required"
    />

    <field
        name="category"
        extension="com_dory"
        label="JCATEGORY"
        required="true"
        type="categoryedit"
        addfieldprefix="Joomla\Component\Categories\Administrator\Field"
        default=""
        class="advancedSelect"
    />

    <fieldset name="accessrules">
        <field
            name="access"
            type="list"
            label="COM_DORY_ACCESS"
            filter="integer"
            validate="options"
            required="required"
        >
            <option value="1">COM_DORY_ACCESS_OPTION_PUBLIC</option>
            <option value="2">COM_DORY_ACCESS_OPTION_USERS</option>
            <option value="3">COM_DORY_ACCESS_OPTION_USERGROUPS</option>
        </field>

        <field
            name="access_usergroups"
            type="UserGroupList"
            layout="joomla.form.field.list-fancy-select"
            checksuperusergroup="1"
            default=""
            multiple="1"
            showon="access:3"
            label="COM_DORY_ACCESS_USERGROUPS"
        />

        <field
            name="access_users"
            type="user"
            label="COM_DORY_ACCESS_USERS"
            showon="access:2"
        />
    </fieldset>

    <fieldset name="publishing">
        <field
            name="id"
            type="text"
            label="JGLOBAL_FIELD_ID_LABEL"
            readonly="true"
        />

        <field
            name="created"
            type="calendar"
            label="JGLOBAL_FIELD_CREATED_LABEL"
            translateformat="true"
			showtime="true"
			filter="user_utc"
        />
        <field
            name="created_by"
            type="user"
            label="JGLOBAL_FIELD_CREATED_BY_LABEL"
        />
        <field
            name="modified"
            type="calendar"
            label="JGLOBAL_FIELD_MODIFIED_LABEL"
            translateformat="true"
			showtime="true"
			filter="user_utc"
        />
        
        <field
            name="modified_by"
            type="user"
            label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
        />
    </fieldset>
</form>